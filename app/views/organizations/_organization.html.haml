%tr
  %td= organization.id
  %td= organization.name
  %td= organization.country_code
  %td
    =link_to edit_organization_path(organization), class: 'btn btn-primary'  do
      %span.glyphicon.glyphicon-edit
      Edit
    = link_to organization_path(organization), method: 'delete', class: 'btn btn-danger', confirm: 'Are you sure you want to delete the organization?' do
      Delete
      %span.glyphicon.glyphicon-remove