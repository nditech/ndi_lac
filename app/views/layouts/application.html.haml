!!! 5
%html
  %head
    %title
      NDI Database
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true 
    = csrf_meta_tag


  %body
    %header.navbar.navbar-default.navbar-static-top
      .container
        = link_to 'NDI Database', root_path, class: 'navbar-brand'
        -if current_user
          %ul.nav.navbar-nav
            %li= link_to 'Reports', reports_path
            %li= link_to 'Contacts', contacts_path
            %li= link_to 'Organizations', organizations_path if current_user.is_admin?
            %li= link_to 'Users', users_path if current_user.is_admin?
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                = current_user.email
                %b.caret
              %ul.dropdown-menu
                %li
                  = link_to 'Edit Profile', user_profile_path
                %li
                  =link_to 'Sign Out', destroy_user_session_path, method: :delete

    .container
      = yield

= javascript_include_tag "application", "data-turbolinks-track" => true

=yield(:javascript_files)

%script{type: 'text/javascript'}
  =yield(:javascript)