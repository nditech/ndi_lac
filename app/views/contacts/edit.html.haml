%h1
  Edit Contact
  %small
    = link_to contacts_path, class: 'btn btn-primary pull-right' do
      %span.glyphicon.glyphicon-arrow-left
      Return
      
    

= render partial: 'form'
  
<script id="regions-template" type="text/x-handlebars-template">
<select class="form-control" name="contact[state_code]" required>
<option>Please select one</option>
{{#each regions}}
<option value="{{code}}">{{name}}</option>
{{/each}}
</select>
</script>