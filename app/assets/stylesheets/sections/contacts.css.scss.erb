.tag_list {
  margin-bottom: 10px;

  .label.label-primary {
    margin-right: 5px;
    
    a {
      color: #fff;
    }
  }
}

#contacts-filters {
  margin-bottom: 30px;
  padding-bottom: 30px;
  border-bottom: 1px solid #dddddd;
  
  .filter-row {
    @extend .row;
    margin-bottom: 10px;
  }
  
  .border-box {
    border: 1px solid #dddddd;
    padding: 10px;
    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
    border-radius: 5px;
    margin-bottom: 10px;
  }
  
}

input {
  &.error {
    border: 1px red solid;
  }
}